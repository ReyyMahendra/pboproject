@page
@model photoworks.Pages.CheckoutModel
@{
    var id = ViewData["id"];
    var biaya = ViewData["Biaya"];
}
 <!--account setting  -->
<div class="row">
    <!-- account header -->
    <div class="col-6 d-flex justify-content-end" style="text-align: center;">
        @* card *@
        <div class="card text-dark" style="width: 20rem;">
                @* little number and price on right *@
                <div class="mt-1">@ViewData["Id"]</div>
                @if(ViewData["JenisPaket"]!=null){
                    @if (ViewData["JenisPaket"].ToString() == "Studio")
                    {
                        <img src="images/studio.png" class="card-img-top" alt="...">
                    }else{
                        <img src="images/fotografer.png" class="card-img-top" alt="...">
                    }
                }
                <div class="card-body d-flex flex-column justify-content-between">
                    <h5 class="card-title">@ViewData["JenisPaket"] (@ViewData["JenisFoto"]/@ViewData["UkuranFoto"])</h5>
                    <p class="card-text text-success">Rp. @ViewData["Biaya"]</p>
                    <p>@ViewData["Keterangan"]</p>
                </div>
            </div>
    </div>
    <!-- account info -->
    <div class="col-6">
        <div class="account-info">
            <div class="account-info-title">
                <h4 style="font-weight: 700;">Data Pemesanan</h4>
            </div>
            <div class="account-info-body">
                <form method="post">
                    <div class="row">
                        <div class="col-8">
                            <!-- name -->
                            <div class="form-group mb-3">
                                <label for="name" class="form-label">Nama</label>
                                <input type="text" class="form-control" id="name" name="name" placeholder="Booking Atas Nama...">
                            </div>
                            @* date *@
                            <div class="form-group mb-3">
                                <label for="date" class="form-label">Tanggal</label>
                                <input type="date" class="form-control" id="date" name="date" placeholder="Tentukan tanggal pemesanan...">
                            </div>
                            @* id paket hidden*@
                            <input type="hidden" name="id_paket" value="@id">
                            @* biaya hidden *@
                            <input type="hidden" name="biaya" value="@biaya">
                            <div class="form-group my-4 d-flex justify-content-between">
                                <a href="/Paket" type="button" class="btn btn-primary">Kembali</a>
                                <button type="submit" style="width: 80px;" class="btn btn-success">Pesan</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    document.getElementById("container").style.marginTop = "5vh";
    document.getElementById("brand").innerText = "Photoworks | Checkout";
</script>
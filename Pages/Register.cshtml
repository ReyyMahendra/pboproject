@page
@model RegisterModel
@{
    Layout = "~/Pages/Shared/_LoginLayout.cshtml";
}
<div class="card shadow" style="width: 25rem; height:auto;">
    <img src="images/register.jpg" class="card-img-top" alt="...">
    <div class="card-body p-5">
        @if (Model.Error != "")
        {
            <div class="alert alert-danger" role="alert">
                @Model.Error
            </div>
        }else if (Model.Message != "")
        {
            <div class="alert alert-success" role="alert">
                @Model.Message
            </div>
        }
        <h3 class="card-title mb-5">Sign Up</h3>
        <form method="post">
            <div class="form-group mb-4">
                <input type="email" class="form-control" id="email" name="email" placeholder="Email" required>
            </div>
            <div class="form-group my-4">
                <input type="text" class="form-control" id="username" name="username" placeholder="Username" required>
            </div>
            <div class="form-group mb-4">
                <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-info btn-block">Sign Up</button>
            </div>
        </form>
        <div class="text-center my-3">
            <p class="card-text">Already a member? <span><a href="/Login" class="card-link">Sign In</a></span></p>
        </div>
    </div>
</div>
@page
@model AccountModel
@{
    var nama = Model.ViewData["Nama"];
    var email = Model.ViewData["Email"];
    var username = Model.ViewData["Username"];
    var password = Model.ViewData["Password"];
    var phone = Model.ViewData["Phone"];
    var address = Model.ViewData["Address"];
}
 <!--account setting  -->
<div class="row">
    <!-- account header -->
    <div class="col-6" style="text-align: right;">
        <h1 class="mx-3" style="font-weight: 700;">Account Setting</h1>
        <p class="mx-3" style="font-weight: 600;">Manage your account</p>
        @if (Model.Message != "")
        {
            <div class="alert alert-danger" role="alert">
                @Model.Message
            </div>
        }
    </div>
    <!-- account info -->
    <div class="col-6">
        <div class="account-info">
            <div class="account-info-title">
                <h4 style="font-weight: 700;">Credentials</h4>
            </div>
            <div class="account-info-body">
                <form method="post">
                    <div class="row">
                        <div class="col-8">
                            <!-- name -->
                            <div class="form-group mb-3">
                                <label for="name" class="form-label">Name</label>
                                <input type="text" class="form-control" id="name" name="name" placeholder="Enter your name" value="@nama">
                            </div>
                            <div class="form-group my-3">
                                <label for="email">Email</label>
                                <input type="email" name="email" id="email" class="form-control" placeholder="Enter your email" value="@email">
                            </div>
                            <div class="form-group my-3">
                                <label for="username">Username</label>
                                <input type="text" name="username" id="username" class="form-control" placeholder="Enter your username" value="@username">
                            </div>
                            <!-- password -->
                            <div class="form-group my-3">
                                <label for="password">Password</label>
                                <input type="password" name="password" id="password" class="form-control" placeholder="Enter your password" value="@password">
                            </div>
                            <!-- phone -->
                            <div class="form-group my-3">
                                <label for="phone">Phone</label>
                                <input type="text" name="phone" id="phone" class="form-control" placeholder="Enter your phone" value="@phone">
                            </div>
                            <!-- address -->
                            <div class="form-group my-3">
                                <label for="address">Address</label>
                                <input type="text" name="address" id="address" class="form-control" placeholder="Enter your address" value="@address">
                            </div>

                            <div class="form-group my-4 text-end">
                                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">Delete Account</button>
                                <button type="submit" style="width: 80px;" class="btn btn-primary">Update</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    document.getElementById("container").style.marginTop = "5vh";
    document.getElementById("tubuh").classList.replace("index", "account");
</script>
@{
    var id = ViewData["Id"];
}
<style>
    .index{
    background-color: #000000;
    /* image background half */
    background-image: url("../images/background.jpg");
    background-size: cover;
    background-repeat: no-repeat;
    /* masked by black */
    color: #FFFFFF;
    /* font nunito */
    font-family: 'Nunito', sans-serif;
}
.paket{
    background-color: #000000;
    /* image background half */
    background-image: url("../images/background3.jpg");
    background-size: cover;
    background-repeat: no-repeat;
    /* masked by black */
    color: #FFFFFF;
    /* font nunito */
    font-family: 'Nunito', sans-serif;
}
.login{
    background-color: #000000;
    background-image: url("../images/background.jpg");
    background-size: cover;
    background-repeat: no-repeat;
    /* font nunito */
    font-family: 'Nunito', sans-serif;
}
.account{
    background-color: #000000;
    background-image: url("images/background2.jpg");
    background-size: cover;
    background-repeat: no-repeat;
    /* font nunito */
    font-family: 'Nunito', sans-serif;
}
.mask{
    background-color: #000000;
    opacity: 0.8;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}
.headlink{
    color: #FFFFFF;
    font-size: 14px;
    text-decoration: none;
    font-weight: 700;
}
.brand-name{
    color: #FFFFFF;
    font-size: 22px;
    font-weight: 700;
}
.header1{
    font-size: 70px;
    font-weight: 700;
}
.header2{
    font-size: 30px;
    font-weight: 400;
    /* italic */
    font-style: italic;
}
.get-started{
    /* size */
    width: 120px;
    height: 40px;
}
</style>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="style.css">
    <link rel="icon" href="images/logo.png" type="image/png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <!-- nunito -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;600;700;800;900&display=swap" rel="stylesheet">
</head>
<body id="tubuh" class="index">
    <div id="masker" class="mask">
        <div class="container">
            <!-- create navbar -->
            <nav class="navbar navbar-expand-lg my-3">
                <div class="container-fluid">
                    <a class="navbar-brand d-flex align-items-center" href="/Landing">
                        <img src="../images/logo.png" alt="logo" style="width:50px; margin-right: 10px;">
                        <!-- photoworks -->
                        <span id="brand" class="brand-name" style="font-weight: 800;">Photoworks</span>
                    </a>
                    <div class="flex-row" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto align-items-center">
                            <li class="nav-item mx-3">
                                <a class="headlink" id="home" href="/Landing">HOME</a>
                            </li>
                            <li class="nav-item mx-3">
                                <a class="headlink" id="porto" href="/Paket">PAKET</a>
                            </li>
                            <!-- li login -->
                            <li class="nav-item mx-3">
                                <!-- login button -->
                                @* if session *@
                                @if (ViewData["Session"] != null)
                                {
                                    @* dropdown *@
                                    <div class="dropdown">
                                        <button class="btn btn-outline-light dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                            @ViewData["Session"]
                                        </button>
                                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                            <li><a class="dropdown-item" href="/Account">Account</a></li>
                                            <li><a class="dropdown-item" href="/MyOrder">Order</a></li>
                                            <li><a class="dropdown-item" href="/History">History</a></li>
                                            <li><a class="dropdown-item" href="/Login">Logout</a></li>
                                        </ul>
                                    </div>
                                }
                                else
                                {
                                    <a id="account" href="/Login">
                                        <button type="button" id="login" class="btn btn-outline-light" data-bs-toggle="modal" data-bs-target="#loginModal">LOGIN</button>
                                    </a>
                                }
                            </li>
                        </ul>
                    </div>
                </div>
              </nav>
        </div>
        <div id="container" class="container text-light" style="margin-top: 20vh;">
            <!-- center content -->
            @RenderBody()
        </div>
    </div>
    <!-- delete modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Delete Order</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-start">
                    <p>Are you sure want to delete this order?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <a href="/DeleteOrder?id=@id" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>